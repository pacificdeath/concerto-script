SCALE AMINOR ( A B C D E F G )
SCALE EMAJOR ( E F# G# A B C# D# )
SCALE DMINOR ( D E F G A A# C )

DEFINE P    (PLAY)
DEFINE PW   (PLAY WAIT)
DEFINE PWW  (PLAY WAIT WAIT)
DEFINE PWWW (PLAY REPEAT 3(WAIT))

SETDURATION 1/16
DEFINE MOTIF1 (
    P P RISE 2 P FALL P FALL P
)

DEFINE MOTIF2 (
    P P RISE P FALL P FALL P RISE
)

DEFINE SECTION1 (
    REPEAT 2 (
        SETSCALE AMINOR
        A PWW MOTIF1
        SETSCALE EMAJOR
        E5 PWW E MOTIF1
        SETSCALE AMINOR
        A PWW MOTIF1
        E5 PWWW E PWWW
    )
)

DEFINE SECTION2 (
    SETSCALE DMINOR
    A5
    REPEAT 2 (
        PWW MOTIF2 FALL 2
        PWW FALL 2 MOTIF1 RISE 3
    )
    PWW FALL 4
)

DEFINE SECTION3 (
    SETSCALE AMINOR
    B MOTIF1 RISE 3
    PWW FALL 4
    MOTIF1 FALL 2
    PW RISE 5 P FALL 5 SEMIRISE P RISE 6 P FALL P FALL 2 P FALL PWWW
)

BPM 999
SECTION1
SECTION2
SECTION3
